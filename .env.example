# DRIFT.AI V2 - Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# ============================================
# API Configuration
# ============================================
NEXT_PUBLIC_API_URL=https://api.drift.ai
# The base URL for your backend API

# ============================================
# Authentication (Auth0)
# ============================================
NEXT_PUBLIC_AUTH0_DOMAIN=your-domain.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your_client_id_here
NEXT_PUBLIC_AUTH0_CLIENT_SECRET=your_client_secret_here
AUTH0_AUDIENCE=https://api.drift.ai
AUTH0_SCOPE=openid profile email

# ============================================
# Analytics & Monitoring
# ============================================
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_analytics_id_here
# Vercel Analytics ID for performance monitoring

# ============================================
# Feature Flags
# ============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_AI_PROCESSING=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=false

# ============================================
# AI/ML Services
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
# OpenAI API key for GPT-4 Vision processing

# ============================================
# Database (if applicable)
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/driftai
# PostgreSQL connection string

# ============================================
# Storage (if applicable)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=drift-ai-uploads

# ============================================
# Development Settings
# ============================================
NODE_ENV=development
# Options: development, production, test

NEXT_PUBLIC_APP_URL=http://localhost:3000
# The URL where your app is running

# ============================================
# Debugging
# ============================================
DEBUG=false
# Set to true to enable verbose logging

# ============================================
# Notes
# ============================================
# - Never commit .env.local to version control
# - Add all sensitive values to .env.local only
# - Update this file when adding new environment variables
# - Document the purpose of each variable
